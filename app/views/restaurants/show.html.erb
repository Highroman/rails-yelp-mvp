<p style="color: green"><%= notice %></p>

<%= @restaurant.name %>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit %>
  <% end %>
<div>
  <ul>
    <% @restaurant.reviews.each do |review|%>
      <li> <%= review.content %>  <%= link_to "Delete review", review_path(review), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %> </li>
    <% end %>
  </ul>

</div>
